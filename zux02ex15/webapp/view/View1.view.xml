<mvc:View controllerName="sync5.zux02ex15.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table items="{/data}" headerText="Carriers"> 
                <columns>
                    <Column><header><Text text="carrId" /></header></Column>
                    <Column><header><Text text="carrName" /></header></Column>
                    <Column><header><Text text="currCode" /></header></Column>
                    <Column><header><Text text="url" /></header></Column>
                </columns>
                
                <items>
                    <ColumnListItem press="onItemClick" type="Active">
                        <cells>
                            <Text text="{carrier/carrId}"></Text>
                            <Text text="{carrier/carrName}"></Text>
                            <Text text="{carrier/currCode}"></Text>
                            <Text text="{carrier/url}"></Text>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

            <!-- 선택시 출력하게 만드세요. -->
            <Table id="tableId" items="{connections}" headerText="Flight connections"> 
                <columns>
                    <Column><header><Text text="Connection ID" /></header></Column>
                    <Column><header><Text text="City from" /></header></Column>
                    <Column><header><Text text="City to" /></header></Column>
                </columns>
                
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{connId}"></Text>
                            <Text text="{cityFrom}"></Text>
                            <Text text="{cityTo}"></Text>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>