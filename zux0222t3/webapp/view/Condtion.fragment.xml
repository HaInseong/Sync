<core:FragmentDefinition
    xmlns = "sap.m"
    xmlns:core="sap.ui.core"
>

    <Label text="Airline"></Label>
    <!-- Second Model에서 값 가져오기 -->
    <!-- <ComboBox items="{/airlineSet}" id="comBoId" selectedKey="{sModel>/airlineSet/0/Carrid}"> 2번 문제에서 사용 -->
    <ComboBox items="{/airlineSet}" id="comBoId">
        <items>
            <core:Item key="{Carrid}" text="{CarrName}" />
        </items>
    </ComboBox>

    <FlexBox >
        <Label text="Connection Number"></Label>
        <!-- <Input id="inpText" value="{sModel>/flightSet/0/ConnId}" /> -->
        <Input id="inpText" />
        <Button text="Search" press="onSearch"></Button>
    </FlexBox>
</core:FragmentDefinition>